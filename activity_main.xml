<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/level_buttons_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/button_basic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BASIC"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/button_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MEDIUM"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/button_professional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROFESSIONAL"/>
    </LinearLayout>


    <EditText
        android:id="@+id/user_answer_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your answer"
        android:inputType="number"
        android:layout_below="@id/level_buttons_layout"
        android:layout_marginBottom="16dp"/>


    <TextView
        android:id="@+id/first_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number 1"
        android:textSize="24sp"
        android:layout_below="@id/user_answer_input"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/second_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number 2"
        android:textSize="24sp"
        android:layout_below="@id/user_answer_input"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/button_check_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Answer"
        android:layout_below="@id/second_number"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>


    <TextView
        android:id="@+id/score_correct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correct: 0"
        android:textSize="18sp"
        android:layout_below="@id/button_check_answer"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/score_incorrect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Incorrect: 0"
        android:textSize="18sp"
        android:layout_below="@id/button_check_answer"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
